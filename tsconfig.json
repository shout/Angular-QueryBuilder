{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declaration": true,
    "inlineSources": true,
    "types": [
      "@angular/localize"
    ],
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "useDefineForClassFields": false
  }
}
